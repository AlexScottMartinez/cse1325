CXXFLAGS += --std=c++17

all: game

debug: CXXFLAGS += -g
debug: game

rebuild: clean game

game: Main.o Board.o Tile.o *.h
	$(CXX) $(CXXFLAGS) -o game Main.o Board.o Tile.o

Main.o: Main.cpp *.h
	$(CXX) $(CXXFLAGS) -c Main.cpp
Board.o: Board.cpp *.h
	$(CXX) $(CXXFLAGS) -c Board.cpp
Tile.o: Tile.cpp *.h
	$(CXX) $(CXXFLAGS) -c Tile.cpp

clean:
	rm -f *.o *.gch ~* a.out game
